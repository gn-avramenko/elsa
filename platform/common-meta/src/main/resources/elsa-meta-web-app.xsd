<?xml version="1.0" encoding="UTF-8"?>
<schema targetNamespace="http://vga.com/elsa/meta-web-app"
        elementFormDefault="qualified" xmlns="http://www.w3.org/2001/XMLSchema"
        xmlns:tns="http://vga.com/elsa/meta-web-app"
        xmlns:common="http://vga.com/elsa/meta-common">
    <element name="web-app">
        <complexType>
            <sequence>
                <choice maxOccurs="unbounded" minOccurs="0">
                    <group ref="tns:AllElementsGroup"/>
                    <element name="enum">
                        <complexType>
                            <complexContent>
                                <extension base="common:MetaElementType">
                                    <sequence>
                                        <element name="enum-item" maxOccurs="unbounded"
                                                 minOccurs="0" type="common:MetaElementType"/>
                                    </sequence>
                                </extension>
                            </complexContent>
                        </complexType>
                    </element>
                    <element name="entity">
                        <complexType>
                            <complexContent>
                                <extension base="common:MetaElementType">
                                    <sequence>
                                        <choice maxOccurs="unbounded" minOccurs="0">
                                            <element name="property" type="common:PropertyType"/>
                                            <element name="collection" type="common:CollectionType"/>
                                            <element name="map" type="common:MapType"/>
                                        </choice>
                                    </sequence>
                                </extension>
                            </complexContent>
                        </complexType>
                    </element>
                </choice>
            </sequence>
        </complexType>
    </element>
    <complexType name="BaseElementType">
        <complexContent>
            <extension base="common:MetaElementType">
                <sequence>
                    <element name="properties-extension" minOccurs="0">
                        <complexType>
                            <sequence>
                                <element name="property" type="common:PropertyType" minOccurs="0"
                                         maxOccurs="unbounded"/>
                                <element name="collection" type="common:CollectionType" minOccurs="0"
                                         maxOccurs="unbounded"/>
                            </sequence>
                        </complexType>
                    </element>
                    <element name="state-extension" minOccurs="0">
                        <complexType>
                            <sequence>
                                <choice>
                                <element name="property" type="common:PropertyType" minOccurs="0"
                                         maxOccurs="unbounded"/>
                                <element name="collection" type="common:CollectionType" minOccurs="0"
                                             maxOccurs="unbounded"/>
                                </choice>
                            </sequence>
                        </complexType>
                    </element>
                    <element name="additional-commands-from-server" minOccurs="0">
                        <complexType>
                            <sequence>
                                <element name="command" type="tns:CommandType" minOccurs="1"
                                         maxOccurs="unbounded"/>
                            </sequence>
                        </complexType>
                    </element>
                    <element name="additional-commands-from-client" minOccurs="0">
                        <complexType>
                            <sequence>
                                <element name="command" type="tns:CommandType" minOccurs="1"
                                         maxOccurs="unbounded"/>
                            </sequence>
                        </complexType>
                    </element>
                </sequence>
                <attribute name="class-name" type="string" use="required"/>
            </extension>
        </complexContent>
    </complexType>
    <group name="AllElementsGroup">
        <choice>
            <element type="tns:ContainerType" name="container"/>
            <element type="tns:ButtonType" name="button"/>
            <element type="tns:SelectType" name="select"/>
            <element type="tns:RouterType" name="router"/>
            <element type="tns:TextAreaType" name="text-area"/>
            <element type="tns:TextFieldType" name="text-field"/>
            <element type="tns:TableType" name="table"/>
            <element type="tns:AutocompleteType" name="autocomplete"/>
            <element type="tns:LabelType" name="label"/>
            <element type="tns:CustomType" name="custom"/>
        </choice>
    </group>
    <simpleType name="ContainerFlexDirection">
        <restriction base="string">
            <enumeration value="ROW"/>
            <enumeration value="COLUMN"/>
        </restriction>
    </simpleType>
    <complexType name="CommandType">
        <complexContent>
            <extension base="common:MetaElementType">
                <sequence minOccurs="0" maxOccurs="unbounded">
                    <choice>
                        <element name="property" type="common:PropertyType"/>
                        <element name="collection" type="common:CollectionType"/>
                    </choice>
                </sequence>
            </extension>
        </complexContent>
    </complexType>
    <complexType name="ContainerType">
        <complexContent>
            <extension base="tns:BaseElementType">
                <sequence minOccurs="0">
                    <element name="children">
                        <complexType>
                            <sequence>
                                <choice>
                                    <group ref="tns:AllElementsGroup"/>
                                </choice>
                            </sequence>
                        </complexType>
                    </element>
                </sequence>
                <attribute name="flex-direction" type="tns:ContainerFlexDirection"/>
            </extension>
        </complexContent>
    </complexType>
    <complexType name="RouterType">
        <complexContent>
            <extension base="tns:BaseElementType"/>
        </complexContent>
    </complexType>
    <complexType name="LabelType">
        <complexContent>
            <extension base="tns:BaseElementType"/>
        </complexContent>
    </complexType>
    <complexType name="ButtonType">
        <complexContent>
            <extension base="tns:BaseElementType"/>
        </complexContent>
    </complexType>
    <complexType name="TextAreaType">
        <complexContent>
            <extension base="tns:BaseElementType"/>
        </complexContent>
    </complexType>
    <complexType name="TextFieldType">
        <complexContent>
            <extension base="tns:BaseElementType"/>
        </complexContent>
    </complexType>
    <complexType name="SelectType">
        <complexContent>
            <extension base="tns:BaseElementType"/>
        </complexContent>
    </complexType>
    <complexType name="AutocompleteType">
        <complexContent>
            <extension base="tns:BaseElementType"/>
        </complexContent>
    </complexType>
    <complexType name="TableType">
        <complexContent>
            <extension base="tns:BaseElementType">
                <sequence minOccurs="0">
                    <element name="column-description-extension" minOccurs="0">
                        <complexType>
                            <sequence>
                                <element name="property" type="common:PropertyType" minOccurs="0"
                                         maxOccurs="unbounded"/>
                                <element name="collection" type="common:CollectionType" minOccurs="0"
                                         maxOccurs="unbounded"/>
                            </sequence>
                        </complexType>
                    </element>
                    <element name="data-description">
                        <complexType>
                            <sequence  maxOccurs="unbounded">
                                <choice>
                                    <element name="property" type="common:PropertyType" minOccurs="0"
                                             maxOccurs="unbounded"/>
                                    <element name="collection" type="common:CollectionType" minOccurs="0"
                                             maxOccurs="unbounded"/>
                                </choice>
                            </sequence>
                        </complexType>
                    </element>
                </sequence>
            </extension>
        </complexContent>
    </complexType>
    <complexType name="CustomType">
        <complexContent>
            <extension base="tns:BaseElementType"/>
        </complexContent>
    </complexType>
</schema>
